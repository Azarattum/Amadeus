{
  "name": "amadeus",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "plugins/*"
  ],
  "scripts": {
    "postinstall": "ncp node_modules/@vlcn.io/wa-crsqlite/dist/wa-sqlite-async.wasm apps/web/static/sqlite.wasm",
    "build": "rimraf build && turbo run build --parallel --no-daemon",
    "clean": "rimraf build */*/coverage",
    "coverage": "turbo run coverage --parallel --no-daemon",
    "dev": "turbo run dev --parallel --filter !libfun --filter !@amadeus-music/util --no-daemon",
    "preview": "turbo run preview --parallel --no-daemon",
    "test": "turbo run test --parallel --no-daemon"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@sveltejs/kit": "1.5.6",
    "@types/node": "18.13.0",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "@vitest/coverage-c8": "^0.28.5",
    "@vlcn.io/wa-crsqlite": "0.7.3-next.2",
    "autoprefixer": "^10.4.13",
    "cssnano": "^5.1.14",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "ncp": "^2.0.0",
    "postcss": "^8.4.21",
    "postcss-import": "^15.1.0",
    "postcss-nested": "^6.0.0",
    "prettier": "^2.8.4",
    "prettier-plugin-sort-imports": "^1.7.1",
    "prettier-plugin-svelte": "^2.9.0",
    "prettier-plugin-tailwindcss": "^0.2.2",
    "rimraf": "^4.1.2",
    "rollup": "^3.15.0",
    "svelte": "^3.55.1",
    "svelte-preprocess": "^5.0.1",
    "tailwindcss": "^3.2.6",
    "tslib": "^2.5.0",
    "turbo": "^1.7.4",
    "typescript": "^4.9.5",
    "vite": "4.1.1",
    "vitest": "0.28.5"
  }
}

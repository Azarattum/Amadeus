{
  "name": "amadeus",
  "type": "module",
  "workspaces": [
    "plugins",
    "protocol",
    "provider",
    "web"
  ],
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "ts-node",
        "rollup",
        "svelte",
        "vite"
      ]
    }
  },
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "npm run clean && turbo run build",
    "preview": "turbo run preview --parallel",
    "test": "turbo run test --parallel",
    "coverage": "turbo run coverage --parallel",
    "clean": "rimraf build"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@types/node": "18.0.3",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "c8": "^7.11.3",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.11",
    "rimraf": "^3.0.2",
    "rollup-plugin-typescript2": "^0.32.1",
    "ttypescript": "^1.5.13",
    "turbo": "^1.3.1",
    "typescript": "^4.7.4",
    "vite": "2.9.13",
    "vitest": "0.17.0"
  },
  "dependencies": {
    "typescript-is": "^0.19.0"
  }
}

{
  "name": "amadeus",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/tailwind/*",
    "plugins/*"
  ],
  "scripts": {
    "build": "rimraf build && turbo run build --parallel --no-daemon",
    "clean": "rimraf build */*/coverage",
    "coverage": "turbo run coverage --parallel --no-daemon",
    "dev": "turbo run dev --parallel --filter !libfun --filter !@amadeus-music/util --no-daemon",
    "preview": "turbo run preview --parallel --no-daemon",
    "test": "turbo run test --parallel --no-daemon"
  },
  "devDependencies": {
    "@sveltejs/kit": "1.20.2",
    "@types/node": "20.3.1",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "@vitest/coverage-c8": "^0.32.0",
    "autoprefixer": "^10.4.14",
    "cssnano": "^6.0.1",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "postcss": "^8.4.24",
    "postcss-import": "^15.1.0",
    "prettier": "^2.8.8",
    "prettier-plugin-sort-imports": "^1.7.2",
    "prettier-plugin-svelte": "^2.10.1",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "rimraf": "^5.0.1",
    "rollup": "^3.25.1",
    "rollup-plugin-node-externals": "^6.1.1",
    "svelte": "^3.59.1",
    "svelte-check": "^3.4.3",
    "tailwindcss": "^3.3.2",
    "tailwindcss-contain": "^0.1.1",
    "tslib": "^2.5.3",
    "turbo": "^1.10.3",
    "typescript": "^5.1.3",
    "vite": "4.3.9",
    "vitest": "0.32.0"
  },
  "dependencies": {
    "@capacitor/core": "^5.0.5"
  }
}
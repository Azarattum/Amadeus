{
  "name": "amadeus",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "plugins/*"
  ],
  "scripts": {
    "build": "rimraf build && turbo run build",
    "clean": "rimraf build */coverage",
    "coverage": "turbo run coverage --parallel",
    "dev": "turbo run dev --parallel",
    "preview": "turbo run preview --parallel",
    "test": "turbo run test --parallel"
  },
  "dependencies": {
    "typescript-is": "^0.19.0"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@sveltejs/kit": "1.0.0-next.392",
    "@types/node": "18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "autoprefixer": "^10.4.7",
    "c8": "^7.12.0",
    "cssnano": "^5.1.12",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "postcss": "^8.4.14",
    "postcss-import": "^14.1.0",
    "postcss-nested": "^5.0.6",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.12",
    "rimraf": "^3.0.2",
    "rollup-plugin-typescript2": "^0.32.1",
    "tailwindcss": "^3.1.6",
    "tslib": "^2.4.0",
    "ttypescript": "^1.5.13",
    "turbo": "^1.3.4",
    "typescript": "^4.7.4",
    "vite": "3.0.2",
    "vitest": "0.18.1"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [

{
  "name": "amadeus",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "plugins/*"
  ],
  "scripts": {
    "build": "rimraf build && turbo run build --parallel --no-daemon",
    "clean": "rimraf build */coverage",
    "coverage": "turbo run coverage --parallel --no-daemon",
    "dev": "turbo run dev --parallel --filter !libfun --filter !@amadeus-music/util --no-daemon",
    "preview": "turbo run preview --parallel --no-daemon",
    "test": "turbo run test --parallel --no-daemon"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@sveltejs/kit": "1.0.0-next.567",
    "@types/node": "18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vitest/coverage-c8": "^0.25.3",
    "autoprefixer": "^10.4.13",
    "cssnano": "^5.1.14",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "postcss": "^8.4.19",
    "postcss-import": "^15.0.0",
    "postcss-nested": "^6.0.0",
    "prettier": "^2.8.0",
    "prettier-plugin-sort-imports": "^1.7.1",
    "prettier-plugin-tailwindcss": "^0.2.0",
    "rimraf": "^3.0.2",
    "rollup": "^3.5.0",
    "svelte": "^3.53.1",
    "svelte-preprocess": "^4.10.7",
    "tailwindcss": "^3.2.4",
    "tslib": "^2.4.1",
    "turbo": "^1.6.3",
    "typescript": "^4.9.3",
    "vite": "3.2.4",
    "vitest": "0.25.3"
  }
}

{
  "name": "amadeus",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "plugins/*"
  ],
  "scripts": {
    "build": "rimraf build && turbo run build",
    "clean": "rimraf build */coverage",
    "coverage": "turbo run coverage --parallel",
    "dev": "turbo run dev --parallel --filter !libfun --filter !@amadeus/util",
    "preview": "turbo run preview --parallel",
    "test": "turbo run test --parallel"
  },
  "dependencies": {
    "superstruct": "^0.16.0"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@sveltejs/kit": "1.0.0-next.544",
    "@types/node": "18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "@vitest/coverage-c8": "^0.25.2",
    "autoprefixer": "^10.4.8",
    "cssnano": "^5.1.13",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "postcss": "^8.4.16",
    "postcss-import": "^15.0.0",
    "postcss-nested": "^5.0.6",
    "prettier": "^2.7.1",
    "prettier-plugin-sort-imports": "^1.7.0",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "rimraf": "^3.0.2",
    "rollup": "^2.79.0",
    "svelte": "^3.53.1",
    "svelte-preprocess": "^4.10.6",
    "tailwindcss": "^3.1.8",
    "tslib": "^2.4.1",
    "turbo": "^1.6.3",
    "typescript": "^4.8.4",
    "vite": "3.2.3",
    "vitest": "0.25.2"
  }

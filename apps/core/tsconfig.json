{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": true,
    "types": ["node", "vite/client"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "module": "esnext",
    "target": "esnext",
    "lib": ["ESNext", "DOM"],
    "noEmit": true,
    "strict": true
  }
}
